<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/change_email_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_blue_normal">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/change_email_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_01"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/change_email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定邮箱"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/change_email_new_hasemailtxt"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="您还尚未绑定邮箱"
            android:layout_marginBottom="5dp"
            android:textColor="@color/green"
            android:textSize="20dp" />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="请输入电子邮箱地址："
            android:layout_marginBottom="20dp"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/change_email_new_edit"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/email01"
                android:inputType="textEmailAddress"
                android:hint="邮箱地址">
                <requestFocus />
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/change_email_new_code"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/check_01"
                android:inputType="number"
                android:hint="请输入验证码" />
            <Button
                android:id="@+id/change_email_new_code_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="获取验证码"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                style="@style/btn_style1"
                android:textSize="14dp"
                android:background="@drawable/demand_btn_normal"/>
        </RelativeLayout>
        <Button
            android:layout_marginTop="40dp"
            android:id="@+id/change_email_new_yesBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/btn_style1"
            android:text="确 定"/>
    </LinearLayout>

</LinearLayout>