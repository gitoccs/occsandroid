<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/change_password_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_blue_normal">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/change_password_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_01"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/change_password_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="您的用户名是："
                android:layout_marginBottom="20dp"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/change_password_oldpass_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="assas"
                android:textColor="@color/green"
                android:layout_marginBottom="18dp"
                android:textSize="20dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/change_password_oldpass_pass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/password_01"
            android:inputType="textPassword"
            android:hint="请输入密码">
            <requestFocus />
        </EditText>
        <Button
            android:id="@+id/change_password_oldpass_yesBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/btn_style1"
            android:text="下一步"/>
    </LinearLayout>

</LinearLayout>