<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textSize="24dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请设置您的新密码"
            android:textSize="16dp"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:id="@+id/find_pass_newpass1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新密码"
            android:password="true"
            android:textColorHint="@color/light_gray"
            android:drawableLeft="@drawable/password_01"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/find_pass_newpass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:hint="请验证新密码"
            android:textColorHint="@color/light_gray"
            android:drawableLeft="@drawable/password_01"
            android:layout_marginBottom="50dp"/>
        <Button
            android:id="@+id/find_pass_newpass_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            style="@style/btn_style1"
            android:background="@drawable/login_btn_normal"/>
    </LinearLayout>
</LinearLayout>
