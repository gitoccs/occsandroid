<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/my_custom_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/my_custom_background2">
            <TextView
                android:id="@+id/gongdan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="标题"
                android:layout_alignParentLeft="true"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/gongdan_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:hint="费用"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:paddingTop="7dp"
                android:paddingRight="10dp"
                android:textSize="16dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="工单类型："
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/gongdan_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="type"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="所属项目："
                    android:paddingLeft="15dp"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/gongdan_project"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="project"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="开发周期："
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/gongdan_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="peroid"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:textSize="16dp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="截止日期："
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/gongdan_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="deadline"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:textSize="16dp" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/gongdan_status"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/btn_red_normal"
                android:hint="状态"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:textSize="16dp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/sys_note_newimage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/newoncell" />
</RelativeLayout>